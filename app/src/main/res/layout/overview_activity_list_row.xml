<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/overview_activity_list_type"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_event_type_project_work_black"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/overview_activity_list_type"
        android:orientation="vertical"
        android:padding="8dp">
        <TextView
            android:id="@+id/overview_activity_list_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="13dp"
            android:text="@string/list_time_span"/>
        <TextView
            android:id="@+id/overview_activity_list_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="17dp"
            android:text="@string/name"/>
    </LinearLayout>
</RelativeLayout>
